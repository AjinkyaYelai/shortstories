<?xml version="1.0" encoding="utf-8"?>
<Story
    title="An Android's Tale"
    author="Nick Rout"
    description="Play the role of Andy the Android as you embark on a quest in the fictional realm of Plex.
Your aim is to aquire each of the twelve sweet treats, scattered far and wide.
Rumours of a mysterious thirteenth treat begin to appear as your story unfolds...">

    <Achievement name="Cupcake"/>
    <Achievement name="Donut"/>
    <Achievement name="Eclair"/>
    <Achievement name="Froyo"/>
    <Achievement name="Gingerbread"/>
    <Achievement name="Honeycomb"/>
    <Achievement name="Ice Cream Sandwich"/>
    <Achievement name="Jelly Bean"/>
    <Achievement name="KitKat"/>
    <Achievement name="Lollipop"/>
    <Achievement name="Marshmallow"/>
    <Achievement name="Nougat"/>
    <Achievement name="O"/>

    <!-- General requirements -->
    <!-- Sub-choices should not exceed an amount of 3 (as per App Shortcuts limit of 4 requirement, 1 reserved for 'Show scenario' -->
    <!-- Choice actions should be <= 25 characters in length (due to App Shortcuts limits) -->
    <!-- Provide a valid action_type for each Action, and a valid scenario_type for each Scenario (see below) -->
    <!-- Provide a single Finish and optional Achievement/s at each story ending -->

    <!--
    Action types (determines shortcut color / icon):
        0 - Unknown
        1 - Wait
        2 - Stop
        3 - Proceed
        4 - Move Left
        5 - Move Right
        6 - Flee
        7 - Engage
        8 - Rest
        9 - Exercise
        10 - Buy
        11 - Sell
        12 - Eat
        13 - Drink
        14 - Agree
        15 - Disagree
        16 - Inspect
        17 - Keep
        18 - Discard
        19 - Use
        20 - Play
        21 - Attack
        22 - Defend
        23 - Learn
        24 - Ideate
        25 - Fix
        26 - Numeric_1
        27 - Numeric_2
        28 - Numeric_3
        29 - Numeric_4
        30 - Numeric_5
    -->

    <!--
    Scenario types (determines notification color / icon / sound / vibrate pattern):
        0 - Unknown
        1 - Challenge
        2 - Direction
        3 - Proposal
        4 - Meeting
        5 - Conflict
        6 - Item
        7 - Requirement
        8 - Transaction
        9 - Game
        10 - Puzzle
        11 - Numeric
        12 - Problem
        13 - Preparation
        14 - Achievement
        15 - Ending
    -->

    <Choice
        scenario="You have arrived at the Plex interchange. Four doors are in front of you. Which will you choose?"
        scenario_type="1">
        <Choice
            action="Ancient door"
            action_type="1"
            scenario="You enter a room with four more doors. Which will you choose?"
            scenario_type="1">
            <Choice
                action="Cupcake door"
                action_type="1"
                scenario="You have found the Cupcake treat!"
                scenario_type="1">
                <Achieve achievement_name="Cupcake"/>
                <Finish/>
            </Choice>
            <Choice
                action="Donut door"
                action_type="1"
                scenario="You have found the Donut treat!"
                scenario_type="1">
                <Achieve achievement_name="Donut"/>
                <Finish/>
            </Choice>
            <Choice
                action="Eclair door"
                action_type="1"
                scenario="You have found the Eclair treat!"
                scenario_type="1">
                <Achieve achievement_name="Eclair"/>
                <Finish/>
            </Choice>
        </Choice>
        <Choice
            action="Mid-century door"
            action_type="1"
            scenario="You enter a room with four more doors. Which will you choose?"
            scenario_type="1">
            <Choice
                action="Froyo door"
                action_type="1"
                scenario="You have found the Froyo treat!"
                scenario_type="1">
                <Achieve achievement_name="Froyo"/>
                <Finish/>
            </Choice>
            <Choice
                action="Gingerbread door"
                action_type="1"
                scenario="You have found the Gingerbread treat!"
                scenario_type="1">
                <Achieve achievement_name="Gingerbread"/>
                <Finish/>
            </Choice>
            <Choice
                action="Honeycomb door"
                action_type="1"
                scenario="You have found the Honeycomb treat!"
                scenario_type="1">
                <Achieve achievement_name="Honeycomb"/>
                <Finish/>
            </Choice>
        </Choice>
        <Choice
            action="Modern door"
            action_type="1"
            scenario="You enter a room with four more doors. Which will you choose?"
            scenario_type="1">
            <Choice
                action="KitKat door"
                action_type="1"
                scenario="You have found the KitKat treat!"
                scenario_type="1">
                <Achieve achievement_name="KitKat"/>
                <Finish/>
            </Choice>
            <Choice
                action="Lollipop door"
                action_type="1"
                scenario="You have found the Lollipop treat!"
                scenario_type="1">
                <Achieve achievement_name="Lollipop"/>
                <Finish/>
            </Choice>
            <Choice
                action="Marshmallow door"
                action_type="1"
                scenario="You have found the Marshmallow treat!"
                scenario_type="1">
